//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TFAuth *FAuth;
//---------------------------------------------------------------------------
__fastcall TFAuth::TFAuth(TComponent* Owner)
	: TForm(Owner)
{
	DM->admin = false;
	DM->auth = false;
}
//---------------------------------------------------------------------------

void TFAuth::AdminStatus(TObject *Sender){

}

void TFAuth::UserStatus(TObject *Sender){

}

void TFAuth::NotUserStatus(TObject *Sender){
 	FAdmin->Hide();
	FEditCategory->Hide();
	FEditDiscount->Hide();
	FEditFood->Hide();
	FEditIngredient->Hide();
	FEditPersonal->Hide();
}

void __fastcall TFAuth::FormShow(TObject *Sender)
{
	FAdmin->Hide();
	FEditCategory->Hide();
	FEditDiscount->Hide();
	FEditFood->Hide();
	FEditIngredient->Hide();
	FEditPersonal->Hide();
	DM->admin = false;
    DM->auth = false;
}
